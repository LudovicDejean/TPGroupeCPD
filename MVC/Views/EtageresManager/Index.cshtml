@model IEnumerable<LibTP.Model.Etagere>

@{
    ViewData["Title"] = "Étagères";
}

<h1>Étagères</h1>

<p>
    <a asp-action="Create">
        <i class="material-icons" style="font-size: 3rem">add</i>
    </a>
    
    <a asp-action="AddArticle">
        <i class="material-icons" style="font-size: 3rem">queue</i>
    </a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PoidsMaximum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Secteur)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PoidsMaximum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Secteur.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="material-icons">edit</i></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><i class="material-icons">search</i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="material-icons">delete</i></a>
            </td>
        </tr>
}
    </tbody>
</table>
