@model IEnumerable<LibTP.Model.Article>

@{
    ViewData["Title"] = "Article";
}

<h1>Article</h1>

<p>
    <a asp-action="Create">
        <i class="material-icons" style="font-size: 3rem">add</i>
    </a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Libelle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SKU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateSortie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrixInitial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poids)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Libelle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SKU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateSortie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrixInitial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poids)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="material-icons">edit</i></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><i class="material-icons">search</i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="material-icons">delete</i></a>
            </td>
        </tr>
}
    </tbody>
</table>
